<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="5px" android:color="#fff" />
            <gradient android:startColor="#C84E89"
                android:endColor="#F15F79"
                android:angle="180" />
            <corners android:radius="50dp" />
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5px" android:color="#C84E89" />

            <corners android:radius="50dp" />
            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape>
    </item>
</selector>